.side-bar
  .side-bar__header
    .side-bar__header__block
      %p.side-bar__header__block__username
        = current_user.name
      %ul.side-bar__header__block__menu
        %li.side-bar__header__block__edit-user
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-bar__header__block__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-bar__group
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__group-name
            = group.name
          .group__latest-message
            = group.show_last_message